# Docker Compose Environment Variables
# Copy this file to .env and adjust as needed

# Python version for building services
PYTHON_VERSION=3.13

# Service credentials (change in production!)
RABBITMQ_DEFAULT_USER=discogsography
RABBITMQ_DEFAULT_PASS=discogsography

POSTGRES_USER=discogsography
POSTGRES_PASSWORD=discogsography
POSTGRES_DB=discogsography

NEO4J_AUTH=neo4j/discogsography

# Service configuration
DISCOGS_ROOT=/discogs-data
STARTUP_DELAY_EXTRACTOR=10
STARTUP_DELAY_GRAPHINATOR=15
STARTUP_DELAY_TABLEINATOR=20

# Neo4j configuration
NEO4J_HEAP_SIZE=1G
