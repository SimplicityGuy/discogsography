# Normalize line endings for all text files
* text=auto eol=lf

# Specific file types
*.py text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.rs text eol=lf
*.sql text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.db binary
*.sqlite binary
*.pyc binary
